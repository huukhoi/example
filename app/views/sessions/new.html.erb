<% provide :title, t(".lgin") %>
<%= link_to t(".en"), locale: Settings.en %>
<%= link_to t(".vi"), locale: Settings.vi %>
<h1><%= t ".lgin" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label t ".email" %>
      <%= f.text_field :email, class: "form_control" %>

      <%= f.label t ".password" %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form_control" %>

      <%= f.label t ".remember_me", class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me" %></span>
      <% end %>

      <%= f.submit t(".lgin"), class: "btn btn-primary" %>
    <% end %>
    <%= t ".new_user" %>
    <%= link_to t(".signup"), signup_path %>
  </div>
</div>
